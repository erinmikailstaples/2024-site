{{!< default-post}}

{{! If you want to edit post sections/modules go to default-post.hbs
which contains all sections applied for Default/Classic/Fullcover articles }}

{{!-- If no featured image, it will use the classic style instead --}}

{{#post}}

    {{#contentFor "main-class"}}classic {{#if feature_image}}epcl-vertical{{/if}} {{/contentFor}}    

    {{#contentFor "bottom-image"}}
        {{#if feature_image}}
            <div class="featured-image">
                <img class="fullwidth" width="300" height="380" src="{{img_url feature_image size="loop_classic"}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
            </div>
            <div class="info epcl-flex">   
                <!-- start: .meta -->
                <div class="meta top">
                    {{> meta-data/primary-tag }}
                    <time class="meta-info" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                    <div class="min-read meta-info">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
                </div>
                <!-- end: .meta -->    
                <h1 class="main-title title bordered small-border-radius no-margin">{{title}}</h1>
                <!-- start: .meta -->
                <div class="meta epcl-flex">
                    <div class="hide-on-desktop-sm">
                        {{> meta-data/author }}  
                    </div>
                    <div class="last-update"><strong>{{t "Last Update:"}}</strong> {{date updated_at format="MMMM DD, YYYY"}}</div>
                </div>
                <!-- end: .meta -->             
            </div>
        {{else}}
            <div class="info epcl-flex">    
                <h1 class="main-title title bordered small-border-radius no-margin">{{title}}</h1>
                <!-- start: .meta -->
                <div class="meta">
                    <time class="meta-info" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                    <div class="min-read meta-info">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
                    {{!-- {{date format="MMMM DD, YYYY"}} {{updated_at}} --}}
                    <div class="last-update"><strong>{{t "Last Update:"}}</strong> {{date updated_at format="MMMM DD, YYYY"}}</div>
                    <div class="clear"></div>
                </div>
                <!-- end: .meta -->             
            </div>
        {{/if}}

    {{/contentFor}}

    {{#contentFor "sidebar"}}
        {{> sidebar }}
    {{/contentFor}}

{{/post}}