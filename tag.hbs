{{!< default}}

<main id="archives" class="main">

    <div class="grid-container grid-medium">

        {{#tag}}

            <div class="tag-description section bg-box ctag-{{slug}}">
                <div class="left grid-35 tablet-grid-45 np-mobile">
                    <b>{{t "Category:"}}</b>
                    <h1 class="title medium fw-bold no-margin ctag ctag-{{slug}}"><svg><use xlink:href="#tag-decoration"></use></svg>{{name}}</h1>
                    <div class="total">{{plural ../pagination.total empty=(t "0 <span class='dot'></span> Articles") singular=(t "1 <span class='dot'></span> Article") plural=(t "% <span class='dot'></span> Articles")}}</div>
                    <div class="epcl-decoration-counter">{{../pagination.total}}</div>
                    
                </div>
                {{#if description}}
                    <div class="right grid-65 tablet-grid-55 np-tablet np-mobile">
                        <p>{{description}}</p>
                    </div>
                {{/if}}
                <div class="clear"></div>
                <div class="epcl-category-overlay"></div>
            </div>
         
        {{/tag}}

    </div>

    <div class="grid-container {{#match @custom.archives_layout "Masonry"}}{{/match}}">
        <div class="epcl-row">
            <!-- start: .content-wrapper -->
            <div class="content-wrapper content">      
                {{#match @custom.archives_layout "Masonry"}}
                    {{> home-blocks/grid-posts}}
                {{else}}
                    {{> home-blocks/classic-posts}}
                {{/match}}                 
            </div>
            <!-- end: .content-wrapper -->
        </div>
    </div>

</main>