{{! Theme Styles }}

<style>{{> css/critical-css}}</style>
{{!-- <link href="{{asset 'dist/style.min.css' }}" type="text/css" rel="stylesheet"> --}}
<link href="{{asset 'dist/plugins.min.css' }}" type="text/css" rel="preload" as="style" onload="this.rel='stylesheet'">

{{! Custom Google Font }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,400;0,500;0,600;0,700;1,400;1,700&family=Outfit:wght@400;700;800&display=swap" rel="preload" as="style" onload="this.rel='stylesheet'">

{{!-- Custom Settings --}}
<style>
    :root{
        {{#if @custom.background_color}}
            --epcl-background-color: {{@custom.background_color}};
        {{/if}}
        {{#if @custom.boxes_background_color}}
            --epcl-content-background-color: {{@custom.boxes_background_color}};
        {{/if}}
    }

    {{^if @custom.background_decorations}}
        .body-decorations{ display: none; }
    {{/if}}

    {{!-- Custom tag colors --}}
    {{#if @custom.custom_tag_colors}}
        {{#get "tags" }}
            {{#foreach tags visibility="public"}}
                {{#if accent_color}}
                    .ctag-{{slug}}.ctag svg{ fill: {{accent_color}} !important; }
                    {{!-- Loop: Articles custom color --}}
                    {{#if @custom.custom_boxes_color}}
                        .ctag-{{slug}} .epcl-category-overlay{ background: #fff; }
                        .ctag-{{slug}} .epcl-category-overlay:before{ background: {{accent_color}}; }
                    {{/if}}

                    {{!-- Single: Post custom color --}}
                    {{#if @custom.custom_content_color}}
                        .main-article.primary-tag-{{slug}} .epcl-category-overlay{ background: #fff; }
                        .main-article.primary-tag-{{slug}} .epcl-category-overlay:before{ background: {{accent_color}}; }
                    {{/if}}
                {{/if}}
            {{/foreach}}  
        {{/get}}
    {{/if}}

    {{#match @custom.design_style "Soft Shadow"}}
        :root{
            --epcl-border-color: transparent;
            --epcl-transition-bezier: ease;
            --epcl-small-shadow: 0 0px 0px 1px rgba(7,10,25, 0.1);
            --epcl-medium-shadow: 0 3px 9px -1px rgba(7,10,25, 0.1);
            --epcl-boxes-shadow: 0 3px 12px -1px rgba(7,10,25, 0.1), 0 22px 27px -30px rgba(7,10,25, 0.1);
        }
    {{/match}}

</style>

<script>
	// Theme Config, check the documentation before edit this file
    var site_url = '{{@site.url}}';
	var theme_config = {
		masonry: 'on', // If you don't need masonry style, just set to "off"
        sticky_sidebar: 'on', // on / off
		disqus_shortname: 'ghostexample', // You can create your own Disqus Comments here: https://disqus.com/admin/create/
	};
    {{#if @custom.disqus_shortname}}
        theme_config.disqus_shortname = "{{@custom.disqus_shortname}}";
    {{/if}}
</script>