{{!< default-post}}

{{! If you want to edit post sections/modules go to default-post.hbs
which contains all sections applied for Classic/Fullcover articles }}

{{#post}}

    {{#contentFor "main-class"}}fullcover{{/contentFor}}    

    {{#contentFor "top-image"}}
        {{#if feature_image}}
            <div class="fullcover-wrapper">
                <div class="post-format-image ">
                    <div class="featured-image">
                        <!-- start: .meta -->
                        <div class="meta top">
                            {{> meta-data/primary-tag }}
                            <time class="meta-info" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                            <div class="min-read meta-info">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</div>
                        </div>
                        <!-- end: .meta --> 
                        <div class="epcl-loader">
                            <img width="1500" height="600" src="{{img_url feature_image size="fullcover"}}" class="fullwidth" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                        </div>                        
                        <div class="info">
                            <h1 class="main-title title large bordered small-border-radius">{{title}}</h1>
                        </div>
                    </div>
                </div>
            </div>
        {{/if}}
    {{/contentFor}}    

    {{#contentFor "sidebar"}}
        {{> sidebar }}
    {{/contentFor}}

{{/post}}